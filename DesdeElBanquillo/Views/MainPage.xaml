<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DesdeElBanquillo.ViewModels"
             xmlns:model="clr-namespace:DesdeElBanquillo.Models"
             x:Class="DesdeElBanquillo.MainPage"
             x:DataType="viewmodel:MainViewModel"
             NavigationPage.HasNavigationBar="False">

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,Auto" 
                  RowSpacing="0"
                  BackgroundColor="White">
                
                <!-- 1. Barra de navegación superior -->
                <Border Grid.Row="0"
                        BackgroundColor="{StaticResource Primary}"
                        Stroke="Transparent"
                        HeightRequest="60">
                    <Grid ColumnDefinitions="Auto,*,Auto"
                          Padding="20,10"
                          ColumnSpacing="10">
                        
                        <!-- Icono de perfil -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="LightGray"
                                Stroke="Transparent"
                                StrokeShape="RoundRectangle 20"
                                HorizontalOptions="Start"
                                VerticalOptions="Center">
                            <Image Source="profile_icon.png"
                                   Aspect="AspectFit"/>
                        </Border>
                        
                        <!-- Nombre de la app -->
                        <Label Grid.Column="1"
                               Text="DesdeElBanquillo"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"/>
                        
                        <!-- Enlaces de navegación -->
                        <HorizontalStackLayout Grid.Column="2"
                                               HorizontalOptions="End"
                                               Spacing="24"
                                               VerticalOptions="Center">
                            <Label Text="Ligas" 
                                   Style="{StaticResource NavbarLabel}"/>
                            <Label Text="Equipos" 
                                   Style="{StaticResource NavbarLabel}"/>
                            <Label Text="Competiciones" 
                                   Style="{StaticResource NavbarLabel}"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
                
                <!-- 2. Sección Hero -->
                <Border Grid.Row="1"
                        Background="{StaticResource HeroGradient}"
                        HeightRequest="300">
                    <VerticalStackLayout Spacing="10"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Padding="20">
                        
                        <Label Text="Tu repositorio completo de fútbol" 
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"
                               HorizontalOptions="Center"/>
                        
                        <Label Text="Estadísticas, resultados y análisis de tus equipos y jugadores favoritos"
                               FontSize="18"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"/>
                        
                        <Grid ColumnDefinitions="*,Auto"
                              Padding="0,20"
                              ColumnSpacing="10">
                            <Entry Placeholder="Buscar equipos, jugadores, partidos..."
                                   BackgroundColor="White"
                                   Text="{Binding SearchQuery}"
                                   HeightRequest="40"
                                   Grid.Column="0"/>
                            <Button Text="Buscar" 
                                    Command="{Binding SearchCommand}"
                                    WidthRequest="100"
                                    Grid.Column="1"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
                
                <!-- 3. Panel de tarjetas -->
                <VerticalStackLayout Grid.Row="2"
                                     Padding="20"
                                     Spacing="20">
                    
                    <Label Text="Acceso Rápido" 
                           Style="{StaticResource SectionHeader}"/>
                    
                    <CollectionView ItemsSource="{Binding QuickAccessItems}"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Fill"
                                    ItemSizingStrategy="MeasureFirstItem">
                        
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="2" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:QuickAccessItem">
                                <Border Style="{StaticResource CardStyle}"
                                        HeightRequest="180">
                                    <Grid RowDefinitions="Auto,Auto,*,Auto"
                                          Padding="10">
                                        
                                        <!-- Icono y título -->
                                        <HorizontalStackLayout Grid.Row="0"
                                                               Spacing="10">
                                            <Image Source="{Binding Icon}"
                                                   WidthRequest="30"
                                                   HeightRequest="30"
                                                   Aspect="AspectFit"/>
                                            <Label Text="{Binding Title}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                        
                                        <!-- Descripción -->
                                        <Label Grid.Row="1"
                                               Text="{Binding Description}"
                                               FontSize="14"
                                               TextColor="{StaticResource TextSecondary}"
                                               Margin="0,5,0,0"/>
                                        
                                        <!-- Botón de acción -->
                                        <Button Grid.Row="3"
                                                Text="Ver"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=ViewItemCommand}"
                                                CommandParameter="{Binding .}"
                                                VerticalOptions="End"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <Label Text="Ligas Populares" 
                           Style="{StaticResource SectionHeader}"/>
                    
                    <CollectionView ItemsSource="{Binding Leagues}"
                                    ItemsLayout="VerticalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:League">
                                <Border Style="{StaticResource CardStyle}"
                                        Margin="0,0,0,15">
                                    <Grid ColumnDefinitions="Auto,*"
                                          ColumnSpacing="15">
                                        <Image Source="{Binding Logo}"
                                               WidthRequest="60"
                                               HeightRequest="60"
                                               Aspect="AspectFit"/>
                                        <VerticalStackLayout Grid.Column="1">
                                            <Label Text="{Binding Name}" 
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Country}" 
                                                   FontSize="14"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>