<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#FFFFFF</Color>
    <Color x:Key="Secondary">#A8E6CF</Color>
    <Color x:Key="Accent">#FFD3B6</Color>
    <Color x:Key="TextPrimary">#333333</Color>
    <Color x:Key="TextSecondary">#666666</Color>

    <LinearGradientBrush x:Key="HeroGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#A8E6CF" Offset="0"/>
        <GradientStop Color="#FFD3B6" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF9A8B" Offset="0"/>
        <GradientStop Color="#FF6B95" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>